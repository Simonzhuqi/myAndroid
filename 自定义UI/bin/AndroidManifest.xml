<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itrun.mywidget"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.itrun.zhuqi.ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.itrun.zhuqi.ui.SiderMeunActivity"
            android:label="@string/title_activity_sider_meun" >
        </activity>
        <activity
            android:name="com.itrun.zhuqi.ui.TweenAnimationActivity"
            android:label="@string/title_activity_tween_animation" >
        </activity>
        <activity
            android:name="com.itrun.zhuqi.ui.SlidingMenuActivity"
            android:label="@string/title_activity_sliding_menu" >
        </activity>
    </application>

</manifest>
